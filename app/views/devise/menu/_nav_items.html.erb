<% if user_signed_in? %>
  <% if current_user.role == "business" %>
    <%= link_to "Account", user_path(current_user), class:"button" %>
    <%= link_to "Create Promotion", new_promotion_path, class:"button" %>
  <% end %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
  <button class="button" data-target="#sign_in" data-toggle="modal">Sign In </button>
  <button class="button" data-target="#sign_up_customer" data-toggle="modal" type="button">Sign Up </button>
<% end %>
