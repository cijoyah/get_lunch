%html
  %head
    %title GetLunch
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyCgFp1DYdJKHmPIHyOU3jhGRlgqdM45wz0"}
  %body
    %header
      .wrapper.clearfix
        #logo= link_to "FoodStop", root_path
        %nav
          = render 'devise/menu/nav_items'
    %p.notice= notice
    %p.alert= alert

    .wrapper
      = yield

